<div class="container mt-5">
  <h1 class="text-center mb-4"><%= t('.title') %></h1>

  <%= form_with url: '/login', method: :post, class: "needs-validation" do |f| %>
    <div class="row mb-3">
      <%= f.label :email, t('.form.email'), class: "form-label" %>
      <%= f.text_field :email, class: "form-control", required: true %>
    </div>

    <div class="row mb-3">
      <%= f.label :password, t('.form.password'), class: "form-label" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <%= f.submit t('.form.submit'), class: "btn btn-primary" %>
    <%= link_to t('.form.forgot_password'), new_password_reset_path, class: 'btn btn-secondary' %>
  <% end %>
</div>
