<div class="container mt-5">
  <h1 class="mb-4">Отредактировать пользователя</h1>

  <%= form_with model: @user, local: true, class: "needs-validation" do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(@user.errors.count, "ошибка") %> не позволили сохранить пользователя:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
      <div class="form-text">Оставьте пустым, если не хотите менять пароль</div>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Подтвердите пароль", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :role, class: "form-label" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "form-select", required: true %>
    </div>

    <div class="mt-4">
      <%= f.submit "Обновить", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
