<h1 class="mb-4">Список пользователей</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Имя</th>
      <th>Email</th>
      <th>Роль</th>
      <th>Дата создания</th>
      <% if current_user&.role == "admin" %>
        <th>Действия</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.created_at.strftime('%d.%m.%Y %H:%M') %></td>
        <% if current_user&.role == "admin" %>
          <td>
            <%= link_to 'Редактировать', edit_user_path(user), class: "btn btn-primary btn-sm" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

